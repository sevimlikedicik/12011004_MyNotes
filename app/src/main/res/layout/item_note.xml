<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="10dp"
    android:paddingVertical="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_main_delete_note"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:paddingHorizontal="10dp"
            android:src="@drawable/ic_notification_delete"
            android:visibility="gone"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bgr_note"
            android:padding="1dp">
            <RelativeLayout
                android:id="@+id/rl_note_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp">
                <TextView
                    android:id="@+id/tv_note_item_note_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Başlık"
                    android:textColor="@color/black"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/tv_note_item_note_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="10 Mays 2018 10:36"/>

                <TextView
                    android:id="@+id/tv_note_item_note_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:paddingTop="5dp"
                    android:textColor="@color/black"
                    android:layout_below="@+id/tv_note_item_note_title"
                    android:text="Bu notun gövde kısmııdr "
                    />

            </RelativeLayout>

        </RelativeLayout>


    </LinearLayout>


</android.support.constraint.ConstraintLayout>